<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('../../partials/head'); %>
</head>
<body>

<header>
  <%- include('../../partials/header'); %>
</header>

<main>
    <div class="container" style="padding-top: 20px;">
      <h3><%= programa.programa[0].nombre %></h3>
      <div>
        <div style="display: flex; justify-content: space-between; margin-bottom: 10px;">
          <h4>Planes de Estudio</h4>
          <a href="<%= programa.programa[0].id %>/agregarPlan" class="btn btn-success btn" role="button" aria-disabled="true">Agregar Plan de Estudio</a>
        </div>
          <table class="table">
              <thead>
                  <th scope="col-4">#</th>
                  <th scope="col-4">Plan ID</th>
                  <th scope="col-4">AÃ±o</th>
                  <th scope="col-4">Acciones</th>
                </tr>
              </thead>
              <tbody>
                  <% 
                      let contador = 1;
  
                      programa.planestudios.forEach(plan => { %>
                      <tr>
                          <td><%= contador++ %></td>
                          <td><%= plan.id %></td> 
                          <td><%= plan.ano %></td>                        
                          <td>
                            <a href="./<%= programa.programa[0].id %>/planestudios/<%= plan.id %>/eliminar" class="btn btn-danger">Eliminar</button>
                            <a href="./<%= programa.programa[0].id %>/planestudios/<%= plan.id %>" class="btn btn-warning">Detalle</button>
                                
                          </td>
                                                  
                      </tr>
                 <% }); %> 
              </tbody>
            </table>
      </div>
      
      
    </div>
</main>
</body>
</html>