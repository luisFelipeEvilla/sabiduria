    <main>
      <div class="container">
        <div
          style="
            display: flex;
            align-items: center;
            margin-top: 20px;
            border-bottom: 1px solid dimgrey;
          "
        >
          <img
            src="https://raw.githubusercontent.com/lineroml/imgs_sabiduria/main/teacherr.png"
            alt="logo student"
            style="align-self: center; margin-bottom: 20px; margin-right: 10px"
            id="logo"
          />
          <h2>!Bienvenido, profesor!</h2>
        </div>
        <h5 style="margin-top: 20px">Tus cursos</h5>
        <div class="row justify-content-around align-items-center" style="padding-top: 20px">
          <% docente.cursos.map(curso => { %>
          <div class="card col-3" style="width: 18rem">
            <div class="card-body" style="display: flex; flex-direction: column">
              <img
                src="https://raw.githubusercontent.com/lineroml/imgs_sabiduria/main/algebra.png"
                alt="logo student"
                style="align-self: center; margin-bottom: 20px; margin-right: 10px"
                id="logo"
              />
              <h5 class="card-title"><%= curso.asignatura %></h5>
              <p class="card-text"><b>Sal√≥n:</b> <%= curso.salon %></p>
              <a href="/cursos/<%= curso.id%>" class="card-link">Ver detalles del curso</a>
              <a
                href="/cursos/<%= curso.id%>/asistencia"
                class="btn btn-primary"
                style="margin-top: 10px"
                >Ver asistencia</a
              >
            </div>
          </div>
          <% }) %>
        </div>
      </div>
