<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('../../partials/head'); %>
  </head>
  <body
    style="
      background-image: url(https://raw.githubusercontent.com/lineroml/imgs_sabiduria/main/bg-docente.jpg);
      background-repeat: no-repeat;
      background-size: cover;
    "
  >
    <header><%- include('../../partials/header'); %></header>

    <main>
      <div
        class="container"
        style="
          height: 100%;
          background-color: white;
          padding: 20px;
          border-radius: 10px;
          margin-top: 10px;
          box-shadow: 2px 2px 2px 1px rgba(0, 0, 0, 0.2);
        "
      >
        <div style="display: flex; align-items: center; border-bottom: 1px solid dimgrey">
          <img
            src="https://raw.githubusercontent.com/lineroml/imgs_sabiduria/main/teacherr.png"
            alt="logo student"
            style="align-self: center; margin-bottom: 20px; margin-right: 10px"
            id="logo"
          />
          <h2>!Bienvenido, profesor!</h2>
        </div>
        <% if (claseCurso != null && claseHorario != null) { %>
        <div style="display: flex; margin-top: 20px">
          <img
            src="https://raw.githubusercontent.com/lineroml/imgs_sabiduria/main/clock.png"
            alt="logo student"
            style="align-self: center; margin-bottom: 20px; margin-right: 20px"
            id="logo"
          />
          <div>
            <h5>Es hora de clase,</h5>
            <h4 style="margin-bottom: 20px">¡Iniciala para que tus estudiantes asistan!</h4>
          </div>
        </div>

        <div class="card col-3" style="width: 18rem">
          <div class="card-body" style="display: flex; flex-direction: column">
            <img
              src="https://raw.githubusercontent.com/lineroml/imgs_sabiduria/main/algebra.png"
              alt="logo student"
              style="align-self: center; margin-bottom: 20px; margin-right: 10px"
              id="logo"
            />
            <h5 class="card-title"><%= claseCurso.asignatura %></h5>
            <p class="card-text"><b>Salón:</b> <%= claseCurso.salon %></p>
            <a href="/cursos/<%= claseCurso.id%>" class="card-link" style="margin-bottom: 10px"
              >Ver detalle del curso</a
            >
            <a
              href="/cursos/<%= claseCurso.id%>/<%= claseHorario.id%>/asistencia/"
              class="btn btn-primary"
              >Ver asistencia</a
            >
          </div>
        </div>
        <div style="width: 100%; border-bottom: 1px solid dimgray; margin-top: 30px"></div>
        <% } %>

        <h4 style="margin-top: 20px">Tus cursos</h4>
        <div
          class="row justify-content-around align-items-center"
          style="padding-top: 20px; margin-bottom: 40px"
        >
          <% docente.cursos.forEach(curso => { %>
          <div class="card col-3" style="width: 18rem">
            <div class="card-body" style="display: flex; flex-direction: column">
              <img
                src="https://raw.githubusercontent.com/lineroml/imgs_sabiduria/main/biology.png"
                alt="logo student"
                style="align-self: center; margin-bottom: 20px; margin-right: 10px"
                id="logo"
              />
              <h5 class="card-title"><%= curso.asignatura %></h5>
              <p class="card-text"><b>Salón:</b> <%= curso.salon %></p>
              <a href="/cursos/<%= curso.id%>" class="card-link">Ver detalle del curso</a>
            </div>
          </div>
          <% }) %>
        </div>
      </div>
    </main>
  </body>
</html>
