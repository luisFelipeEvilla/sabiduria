<!DOCTYPE html>
<html lang="en">



<head>
  <%- include('../../partials/head'); %>
</head>

<body>

  <header>
    <%- include('../../partials/header'); %>
  </header>

  <main>
    <div class="container" style="padding-top: 20px; max-width: 500px;">
      <form action="/estudiantes/<%= estudiante.estudiante[0].id %>/agregarCurso/<%= estudiante.cursos[0].id_matricula %>" method="POST"
        enctype="application/x-www-form-urlencoded">
        <div class="mb-3">
          <label for="nombre" class="form-label">Selccionar docente</label>


          <div class="form-group">

            <select class="form-control" id="id_curso" name="id_curso">

              
              <% cursos.forEach(curso=> {%>

                <option value='<%= curso.id %>'>Curso <%= curso.id %>: <%= curso.asignatura %>, Salon <%= curso.salon %> </option>
                <% })%>

            </select>
          </div>

          <label for="nombre" class="form-label">Selccionar periodo</label>
          <div class="form-group">

            <select class="form-control" id="id_periodo" name="id_periodo">

              
              <% periodos.forEach(periodo=> {%>

                <option value='<%= periodo.id %>'> <%= periodo.descripcion %></option>
                <% })%>

            </select>
          </div>

        </div>
        <button type="submit" class="btn btn-primary">Enviar</button>
      </form>

    </div>
  </main>
</body>

</html>