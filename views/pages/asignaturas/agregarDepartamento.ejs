<!DOCTYPE html>
<html lang="en">



<head>
  <%- include('../../partials/head'); %>
</head>

<body>

  <header>
    <%- include('../../partials/header'); %>
  </header>

  <main>
    <div class="container" style="padding-top: 20px; max-width: 500px;">
      <form action="/asignaturas/<%= asignatura.asignatura[0].id %>/agregarDepartamento" method="POST"
        enctype="application/x-www-form-urlencoded">
        <div class="mb-3">
          <label for="nombre" class="form-label">Selccionar Departamento</label>


          <div class="form-group">

            <select class="form-control" id="id_departamento" name="id_departamento">

              
              <% departamentos.forEach(departamento=> {%>

                <option value='<%= departamento.id %>'><%= departamento.nombre %></option>
                <% })%>

            </select>
          </div>

        </div>
        <button type="submit" class="btn btn-primary">Enviar</button>
      </form>

    </div>
  </main>
</body>

</html>